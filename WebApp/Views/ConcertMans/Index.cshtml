@model IEnumerable<WebApp.ConcertMans>

@{
    ViewData["Title"] = "Исполнители";
}

<h1>Исполнители</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConcertManId">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.ConcertManId">Детально</a> |
                <a asp-action="Delete" asp-route-id="@item.ConcertManId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
